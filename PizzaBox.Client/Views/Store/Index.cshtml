@model PizzaBox.Client.Models.PizzaViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>STORE INDEX</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StoreList[0].StoreId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreList[0].StoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreList[0].StoreAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.StoreList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StoreId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StoreName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StoreAddress)
                </td>
                <td>
                  | <a asp-controller="Order" asp-action="Create" asp-route-id="@item.StoreId">Select Store</a>
                </td>
            </tr>
        }
    </tbody>
</table>