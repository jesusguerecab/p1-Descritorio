@model PizzaBox.Client.Models.PizzaViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserList[0].UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserList[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserList[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserList[0].UserAddress)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserAddress)
                </td>
                <td>
                    <a asp-action="UserOrders" asp-route-id="@item.UserId">View Orders</a> |
                </td>
            </tr>
        }
    </tbody>
</table>